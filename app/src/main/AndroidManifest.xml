<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.QuizApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MultipleScore"
            android:exported="false"
            android:label="@string/title_activity_multiple_score"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".MultiQuiz"
            android:exported="false"
            android:label="@string/title_activity_multi_quiz"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".SingleScore"
            android:exported="false"
            android:label="@string/title_activity_single_score"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".SingleQuiz"
            android:exported="false"
            android:label="@string/title_activity_single_quiz"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".MainScreen"
            android:exported="false"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".SplashScreen"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.QuizApp" />
        <activity
            android:name=".Signup"
            android:exported="false"
            android:label="@string/title_activity_loginpage"
            android:theme="@style/Theme.QuizApp" />

    </application>

</manifest>